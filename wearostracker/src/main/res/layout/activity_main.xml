<androidx.wear.widget.drawer.WearableDrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity"
    android:keepScreenOn="true">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <androidx.wear.widget.BoxInsetLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:padding="@dimen/inner_frame_layout_padding">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/outputText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="1dp"
                        android:scrollbars="vertical"
                        android:text="@string/three_dots"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:visibility="gone"
                        app:boxedEdges="all"
                        tools:ignore="MissingPrefix" />

                    <TextView
                        android:id="@+id/fancy_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="1dp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:scrollbars="vertical"
                        android:text="@string/no_data_yet"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/five_item_font_size"
                        android:visibility="gone"
                        app:boxedEdges="all"
                        tools:ignore="MissingPrefix" />

                    <LinearLayout
                        android:id="@+id/heart_rate_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="1dp"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/heart_rate_bpm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:scrollbars="vertical"
                            android:text="@string/three_dots"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/large_font_size"
                            android:visibility="visible"
                            app:boxedEdges="all"
                            tools:ignore="MissingPrefix" />

                        <ProgressBar
                            android:id="@+id/progressBar"
                            style="?android:attr/progressBarStyleLarge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:indeterminate="true"
                            android:indeterminateTint="@color/colorAccent"
                            android:indeterminateTintMode="src_atop" />

                        <TextView
                            android:id="@+id/heart_rate_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:scrollbars="vertical"
                            android:text="@string/three_dots"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/five_item_font_size"
                            app:boxedEdges="all"
                            tools:ignore="MissingPrefix" />
                    </LinearLayout>

                </RelativeLayout>

            </androidx.wear.widget.BoxInsetLayout>

        </FrameLayout>

    </androidx.core.widget.NestedScrollView>


    <androidx.wear.widget.drawer.WearableActionDrawerView
        android:id="@+id/bottom_action_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_blue"
        app:actionMenu="@menu/action_drawer_menu" />

</androidx.wear.widget.drawer.WearableDrawerLayout>
