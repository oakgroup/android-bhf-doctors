<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".design.activities.menu.FaqActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        tools:ignore="NotSibling">

        <com.active.orbit.baseapp.design.widgets.BaseTextView
            android:id="@+id/faqTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryLight"
            android:paddingStart="@dimen/margin_lateral"
            android:paddingTop="@dimen/margin_lateral"
            android:paddingEnd="@dimen/margin_lateral"
            android:paddingBottom="@dimen/margin_lateral"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="@dimen/h0"
            android:visibility="gone"
            app:typeface="bold"
            tools:visibility="visible" />

        <com.active.orbit.baseapp.design.recyclers.engine.BaseRecyclerView
            android:id="@+id/faqCategories"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_lateral_half"
            android:layout_marginEnd="@dimen/margin_lateral_half"
            android:layout_marginBottom="@dimen/margin_lateral_half" />

        <ScrollView
            android:id="@+id/questionAnswerContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:visibility="visible">

            <com.active.orbit.baseapp.design.widgets.BaseTextView
                android:id="@+id/questionAnswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web|email"
                android:padding="24dp"
                android:textSize="@dimen/h2" />

        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>