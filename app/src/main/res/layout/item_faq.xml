<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="70dp">

    <com.active.orbit.baseapp.design.widgets.BaseTextView
        android:id="@+id/faqText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_lateral"
        android:layout_marginTop="@dimen/margin_lateral"
        android:layout_marginEnd="@dimen/margin_lateral"
        android:layout_marginBottom="@dimen/margin_lateral"
        android:text="@string/app_name"
        android:textSize="@dimen/h2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/faqIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typeface="bold" />

    <com.active.orbit.baseapp.design.widgets.BaseImageView
        android:id="@+id/faqIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_lateral"
        android:layout_marginTop="@dimen/margin_lateral_half"
        android:layout_marginEnd="@dimen/margin_lateral"
        android:layout_marginBottom="@dimen/margin_lateral_half"
        android:adjustViewBounds="true"
        android:clickable="false"
        android:src="@drawable/ic_arrow_right_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/faqText"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>