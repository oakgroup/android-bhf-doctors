<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.FullScreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
    </style>


    <style name="BaseTabTextAppearanceInvisible" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">@color/colorTransparent</item>
    </style>

    <style name="DrawerTextAppearance" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <!-- buttons -->

    <style name="EditTextPrimary" parent="Widget.AppCompat.EditText">
        <item name="android:background">@xml/edit_text_primary_selector</item>
        <item name="android:textColor">@color/textColorPrimaryDark</item>
        <item name="android:textColorHint">@color/textColorGray</item>
        <item name="android:height">@dimen/input_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/input_primary_text_dimension</item>
    </style>

    <style name="TextViewButton" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@xml/panel_secondary_button_text_selector</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/main_text_dimension</item>
    </style>

    <style name="ButtonPrimary" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@xml/button_primary_selector</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:height">@dimen/button_height</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/button_primary_text_dimension</item>
    </style>

    <style name="ButtonSecondary" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@xml/button_secondary_selector</item>
        <item name="android:textColor">@xml/button_secondary_text_selector</item>
        <item name="android:height">@dimen/button_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/button_secondary_text_dimension</item>
    </style>

    <style name="ButtonTertiary" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@xml/button_tertiary_selector</item>
        <item name="android:textColor">@color/textColorPrimaryDark</item>
        <item name="android:height">48dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/button_tertiary_text_dimension</item>
    </style>

    <style name="ButtonMainScreen" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@xml/button_main_screen_selector</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:height">@dimen/button_height</item>
        <item name="android:textSize">@dimen/button_primary_text_dimension</item>
    </style>

    <style name="PanelMainScreen">
        <item name="android:background">@xml/panel_main_screen_selector</item>
    </style>

    <style name="PanelIconMainScreen" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@xml/panel_icon_main_screen_selector</item>
    </style>

    <style name="ButtonTertiaryIcon" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@xml/button_tertiary_icon_selector</item>
    </style>

    <style name="ListItem" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@xml/panel_list_item_selector</item>
    </style>

    <style name="ListItemIcon" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@xml/panel_icon_list_item_selector</item>
    </style>
    <!-- end buttons -->
</resources>